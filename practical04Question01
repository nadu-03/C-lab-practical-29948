#include <stdio.h>
int main(){
int no,ans;
printf("Enter a number\n");
scanf("%d",&no);
ans=no%2;
if (ans==0)
printf("%d is an even number\n",no);
else
printf("%d is an odd number\n",no);
}

With switch
#include <stdio.h>
int main()
{
    int number;
    printf("enter an integer");
    scanf("%d",&number);
    switch (number%2)
    {
        case 0:
        printf("%d is even.\n",number);
        break;
        case 1:
        printf("%d is odd.\n",number);
        break;
    }
}
